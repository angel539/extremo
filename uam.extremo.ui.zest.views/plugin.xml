<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="extremo.ui.views"
            class="uam.extremo.ui.zest.views.inheritance.InheritanceGraphViewPart"
            icon="icons/explore16.png"
            id="uam.extremo.ui.zest.views.InheritanceGraphViewPart"
            name="Connection Explorer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:uam.extremo.ui.zest.views.InheritanceGraphViewPart">
         <command
               commandId="uam.extremo.ui.views.exploreConnections"
               icon="icons/explore16.png"
               style="push">
         </command>
         <command
               commandId="uam.extremo.ui.views.goToParent"
               icon="icons/up16.png"
               style="push">
         </command>
      </menuContribution>
   </extension>


</plugin>

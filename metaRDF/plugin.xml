<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="metaRDFBuilder"
         name="metaRDF Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="metardf.builder.metaRDFBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="metaRDFNature"
         name="metaRDF Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="metardf.builder.MetaRDFNature">
         </run>
      </runtime>
      <builder
            id="metaRDF.metaRDFBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="metaRDF Nature commands"
            id="metaRDF.metaRDFNature.category">
      </category>
      <command
            name="Add/RemovemetaRDF Nature"
            defaultHandler="metardf.builder.AddRemoveMetaRDFNatureHandler"
            categoryId="metaRDF.metaRDFNature.category"
            id="metaRDF.addRemoveMetaRDFNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="metaRDF.addRemoveMetaRDFNature"
               label="Disable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="metaRDF.metaRDFNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="metaRDF.addRemoveMetaRDFNature"
               label="Enable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="metaRDF.metaRDFNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="metaRDF Editor"
            extensions="rdf"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="metardf.editors.XMLEditor"
            id="metardf.editors.XMLEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            name="metaRDF Import"
            id="metardf.importWizards.sampleCategory">
      </category>
      <wizard
            name="Import File"
            icon="icons/sample.gif"
            category="metardf.importWizards.sampleCategory"
            class="metardf.importWizards.ImportWizard"
            id="metardf.importWizards.ImportWizard">
         <description>
            Import a file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="metaRDF Category"
            id="metaRDF">
      </category>
      <view
            name="metaRDF View"
            icon="icons/sample.gif"
            category="metaRDF"
            class="metardf.views.metaRDFView"
            id="metardf.views.metaRDFView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="metardf.views.metaRDFView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>

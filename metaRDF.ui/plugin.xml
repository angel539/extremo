<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="metaRDF.ui.actions" name="metaRDF.ui.actions" schema="schema/metaRDF.ui.actions.exsd"/>
   <extension-point id="metaRDF.ui.drop" name="metaRDF.ui.drop" schema="schema/metaRDF.ui.drop.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="metardf"
            id="metaRDF.ui">
      </category>
      <view
            category="metaRDF.ui"
            class="metardf.ui.views.repositories.RepositoryView"
            icon="icons/site_element.gif"
            id="metardf.ui.views.RepositoryView"
            name="Repositories">
      </view>
      <view
            category="metaRDF.ui"
            class="metardf.ui.views.entities.EntityView"
            icon="icons/hierarchy_co.gif"
            id="metardf.ui.views.EntityView"
            name="Entities">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="metardf.ui.views.EntityView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="metardf.ui.views.RepositoryView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="metardf.ui.perspective">
         <view
               id="metardf.ui.views.EntityView"
               minimized="false"
               relationship="bottom"
               relative="metardf.ui.views.RepositoryView">
         </view>
         <view
               id="metardf.ui.views.RepositoryView"
               minimized="false"
               relationship="bottom">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="metardf.ui.perspective.Perspective"
            fixed="true"
            icon="icons/entities.png"
            id="metardf.ui.perspective"
            name="metaRDF">
      </perspective>
   </extension>

</plugin>
